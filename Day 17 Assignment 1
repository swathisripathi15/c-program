#include<stdio.h>

void  main()
{
    int i,n,a[100],small;

    printf("Enter the number of elements:\n") ;
    scanf("%d",&n) ;
 
    printf("Enter the elements\n") ;
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]) ;
    }
    
    small=a[0];
    for(i=1;i<n;i++)   
    {
        if(a[i]<small)
        {
            small=a[i];
        }
    }
    printf("Smallest of %d elements in an array =Â %d",n,small);
}
